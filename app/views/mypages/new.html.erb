<h2>mypage登録</h2>
<%= render "shared/error", obj: @mypage %>

<%= form_for @mypage do |f| %>
      <table>
        <tr>
          <th><%= f.label :画像 %></th>
          <td><%= f.file_field :img, class: "image" %></td>
        </tr>  
        <tr>
          <th><%= f.label :username ,"名前" %></th>
          <td><%= f.text_field :username %></td>
        </tr>
        <tr>
          <th><%= f.label :introduction ,"自己紹介" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
          <%= f.hidden_field :mypage_id, value: @mypage.id %>
      </table>
      <div>
        <ul>
          <li><%= f.submit "登録"%></li>
        </ul>
      </div>
        
<% end %>
 